<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" maxWidth="300" spacing="15" style="-fx-background-color: #696969;" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="myappjava.Controllers.LoginController">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>
    <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Авторизация" />
    <TextField fx:id="usernameField" promptText="Имя пользователя" style="-fx-pref-width: 200px;" />
    <PasswordField fx:id="passwordField" promptText="Пароль" style="-fx-pref-width: 200px;" />
    <ComboBox fx:id="roleComboBox" promptText="Выберите роль" style="-fx-pref-width: 200px; -fx-background-color: #C0C0C0;" />
    <TextField fx:id="masterKeyField" promptText="Мастер-ключ (для админа)" style="-fx-pref-width: 200px;" visible="false" />
    <HBox alignment="CENTER" spacing="10">
        <Button fx:id="loginButton" onAction="#handleLogin" style="-fx-pref-width: 100px; -fx-background-color: #C0C0C0;" text="Войти" />
        <Button fx:id="registerButton" onAction="#handleRegister" style="-fx-pref-width: 100px; -fx-background-color: #C0C0C0;" text="Зарегистрироваться" />
    </HBox>
</VBox>
